chan D0_0 = [1] of {int};
chan D0_1 = [1] of {int};
chan D0_2 = [1] of {int};
chan D0_3 = [1] of {int};
chan D0_4 = [1] of {int};
chan D1_0 = [1] of {int};
chan D2_0 = [1] of {int};

/* ========================================================= */ 
proctype P0() {
	D0_0!1;
	D0_1!1;
	D0_2!1;
	D0_3!1;
	D0_4!1;
	atomic {
		if
		:: D1_0?1
		:: D2_0?1
		fi
	};
	atomic {
		if
		:: D1_0?1
		:: D2_0?1
		fi
	}
}

/* ========================================================= */ 
proctype P1() {
	atomic {
		if
		::D0_0?1
		:: (empty(D0_0) && nempty(D0_2)) -> D0_2?1
		
		fi
	};
	D1_0!1;
	atomic {
		if
		:: D0_2?1
		fi
	}
}

/* ========================================================= */ 
proctype P2() {
	atomic {
		if
		::D0_1?1
		:: (empty(D0_1) && nempty(D0_3)) -> D0_3?1
		
		fi
	};
	D2_0!1;
	atomic {
		if
		:: D0_3?1
		fi
	}
}

/* ========================================================= */ 
proctype P3() {
	atomic {
		D0_4?1
		
	}
}

/* ========================================================= */ 
init {
	run P0(); run P1(); run P2(); run P3()
}