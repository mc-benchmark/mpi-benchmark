chan D0_0 = [1] of {int};
chan D0_1 = [1] of {int};
chan D0_2 = [1] of {int};
chan D1_0 = [1] of {int};
chan D2_0 = [1] of {int};
chan D3_0 = [1] of {int};

/* ========================================================= */ 
proctype P0() {
	D0_0!1;
	D0_1!1;
	D0_2!1;
	atomic {
		if
		:: D1_0?1
		:: D2_0?1
		:: D3_0?1
		fi
	};
	atomic {
		if
		:: D1_0?1
		:: D2_0?1
		:: D3_0?1
		fi
	};
	atomic {
		if
		:: D1_0?1
		:: D2_0?1
		:: D3_0?1
		fi
	}
}

/* ========================================================= */ 
proctype P1() {
	atomic {
		D0_0?1
		
	};
	D1_0!1
}

/* ========================================================= */ 
proctype P2() {
	atomic {
		D0_1?1
		
	};
	D2_0!1
}

/* ========================================================= */ 
proctype P3() {
	atomic {
		D0_2?1
		
	};
	D3_0!1
}

/* ========================================================= */ 
init {
	run P0(); run P1(); run P2(); run P3()
}