chan D0_0 = [1] of {int};
chan D1_0 = [1] of {int};

/* ========================================================= */ 
proctype P0() {
	D0_0!1;
	atomic {
		if
		:: D1_0?1
		fi
	}
}

/* ========================================================= */ 
proctype P1() {
	atomic {
		D0_0?1
		
	};
	D1_0!1
}

/* ========================================================= */ 
init {
	run P0(); run P1()
}